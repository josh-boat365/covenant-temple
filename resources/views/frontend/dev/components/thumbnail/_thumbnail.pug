	@param {string} [data.linkText] - thumbnail link text
mixin thumbnail-ordered( data )
	// Thumbnail
	.thumbnail.thumbnail-ordered&attributes( attributes )
		.thumbnail-header
			.thumbnail-number.h2
		a.thumbnail-media( href='single-sermon.html' )
			+img( data.img )
		.thumbnail-body
			h3.thumbnail-title: a( href='single-sermon.html' )= data.title
			.thumbnail-text= data.text
			a.link.thumbnail-link.text-small( href='single-sermon.html' )= 'Explore'
