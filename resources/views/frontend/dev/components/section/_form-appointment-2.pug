include ../quote/_quote

// Team member experience
section#consultation-form.section-md.bg-900.context-dark
	.container
		.row.row-5.align-items-baseline
			.col-lg-6( data-animate!={ class: 'fadeIn' } )
				h2  Free Consultation
			.col-lg-6( data-animate!={ class: 'fadeIn', delay: '.2s' } )
				h3.font-italic.font-secondary( style='opacity: .6' ) Get an appointment with one of our pastors
		form.rd-mailform.rd-form( data-form-output='form-appointment', data-form-type='contact', method='post', action='components/rd-mailform/rd-mailform.php' )
			.row.row-20.row-gutters-20
				.col-sm-6.col-lg-3( data-animate!={ class: 'fadeInUpBig' } )
					.form-group
						input.form-control( type='text', name='name', placeholder='Your Name*', data-constraints='@Required' )
				.col-sm-6.col-lg-3( data-animate!={ class: 'fadeInUpBig', delay: '.15s' } )
					.form-group
						input.form-control( type='email', name='email', placeholder='Your E-mail*', data-constraints='@Email @Required' )
				.col-sm-6.col-lg-3( data-animate!={ class: 'fadeInUpBig', delay: '.3s' } )
					.form-group
						input.form-control( type='text', name='phone', placeholder='Your Phone*', data-constraints='@PhoneNumber @Required' )
				.col-sm-6.col-lg-3( data-animate!={ class: 'fadeInUpBig', delay: '.45s' } )
					button.btn.btn-block( type='submit' ) Make an appointment
		#form-appointment.form-output.snackbar.snackbar-primary
